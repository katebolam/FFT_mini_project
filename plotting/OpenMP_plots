import pandas as pd
import matplotlib.pyplot as plt
import numpy as np

# Load the data
df = pd.read_csv("C:\\Users\\Kate\\OneDrive\\Documents\\Uni\\Y4\\Advanced Computational Physics\\FFT_mini_project\\plotting\\1D_OpenMP_FFT_times.csv")

# Prepare the data for plotting
problem_sizes = df['Problem Size']
threads_columns = df.columns[1:]

# Create a log-log plot
plt.figure(figsize=(8, 5))
for column in threads_columns:
    plt.plot(problem_sizes, np.log10(df[column]), label=column)

# Add labels and legend
plt.xlabel("N")
plt.ylabel("log(Execution Time) (s)")
plt.xscale('log', base=2) 
plt.legend()
plt.show()
